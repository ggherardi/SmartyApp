<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Smarty.Views.BindPhysicalTicketPage"
             BackgroundColor="{StaticResource Secondary}"
             Title="Associa biglietto fisico">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Padding="20, 20, 20, 20" Margin="0, 20, 0, 0">
                <Label FontSize="18">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="Premi il pulsante sottostante e avvicina il telefono al biglietto fisico per iniziare la procedura di associazione."></Span>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
                <Button Text="Associa biglietto" Command="{Binding BindTicketCommand}" class="btn-primary" Margin="0, 20, 0, 0"></Button>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>